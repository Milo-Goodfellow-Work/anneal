{
  "name": "Rust-Lean-LLM Dev",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },

  "workspaceFolder": "/workspaces/anneal",

  "postCreateCommand": "sed -i 's/\\r$//' /usr/local/bin/init-spec.sh && chmod +x /usr/local/bin/init-spec.sh && rm -rf /app && ln -s /workspaces/anneal /app && /usr/local/bin/init-spec.sh /app",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "leanprover.lean4",
        "ms-python.python"
      ]
    }
  }
}
